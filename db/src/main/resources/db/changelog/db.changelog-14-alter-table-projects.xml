<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.8.xsd">

    <changeSet id="14" author="a.kakushin">
        <addColumn tableName="projects">
            <column name="infobase_name_extension" type="varchar(255)"/>
            <column name="infobase_id" type="bigint"/>
        </addColumn>
        <addForeignKeyConstraint
                baseTableName="projects"
                baseColumnNames="infobase_id"
                constraintName="FK_PROJECTS_ON_INFOBASES"
                referencedTableName="infobases"
                referencedColumnNames="id"/>

        <rollback>
            <dropColumn tableName="projects" columnName="infobase_name_extension"/>
            <dropColumn tableName="projects" columnName="infobase_id"/>

            <dropForeignKeyConstraint baseTableName="projects" constraintName="FK_PROJECTS_ON_INFOBASES"/>
        </rollback>
    </changeSet>
</databaseChangeLog>